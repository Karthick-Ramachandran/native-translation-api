<script>
   document.getElementById('user1').addEventListener('keyup', function(){
        document.getElementById('twomsg').innerHTML = "user one typing...."
           document.getElementById('user1').addEventListener('blur', function(){
        document.getElementById('twomsg').innerHTML = ""

           });
    })

   document.getElementById('user2').addEventListener('keyup', function(){
        document.getElementById('messagesone').innerHTML = "user two typing...."
           document.getElementById('user2').addEventListener('blur', function(){
        document.getElementById('messagesone').innerHTML = ""

           });
