document.getElementById('sub1').addEventListener('click', function(){
    var name = document.getElementById('user1').value;
 var xhr = new XMLHttpRequest();

xhr.open('GET', `/ta/${name}`, true);

xhr.onload = function(){
    if(this.status === 200){
        var msd = JSON.parse(this.responseText);

    document.getElementById('msgval2').innerHTML += msd + "<br/>" + "<br>";

    }
}

xhr.send()



});

document.getElementById('sub2').addEventListener('click', function(){
    
var name = document.getElementById('user2').value;
 var xhr = new XMLHttpRequest();

xhr.open('GET', `/en/${name}`, true);

xhr.onload = function(){
